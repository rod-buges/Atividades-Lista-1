package com.projetoigor.mavenprojectengenhariadesoftware;

import java.util.Scanner;

/**
 *
 * @author labinfo
 */
public class primeiroarquivojava {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
       int a, b, c;
       int somaAB;
    
       
        System.out.println("Informe o valor de A");
        a = scanner.nextInt();
        
        System.out.println("Informe o valor de B");
        b = scanner.nextInt();
        
        System.out.println("Informe o valor de C");
        c = scanner.nextInt();
        
        somaAB = a + b;
        if (somaAB < c) {
            System.out.println("A soma de A + B é: " + somaAB + " | O valor de C é: " + c);
        }
        

    }

}
